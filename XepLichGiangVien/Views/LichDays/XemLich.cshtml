@model IEnumerable<XepLichGiangVien.Models.LichDay>

@{
    ViewBag.Title = "Lịch Dạy Của Tôi";
}

<div class="container my-5">
    <h2 class="mb-4 text-center text-primary">Lịch Dạy Của Tôi</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>Môn học</th>
                    <th>Phòng học</th>
                    <th>Thứ</th>
                    <th>Tiết</th>
                    <th>Tuần</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.LopHocPhan.TenMH</td>
                        <td>@item.PhongHoc.TenPhong</td>
                        <td>Thứ @item.Thu</td>
                        <td>@item.TietBatDau - @item.TietKetThuc</td>
                        <td>@item.TuanBatDau - @item.TuanKetThuc</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
