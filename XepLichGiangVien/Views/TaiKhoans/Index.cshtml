@model IEnumerable<XepLichGiangVien.Models.TaiKhoan>

@{
    ViewBag.Title = "Danh sách tài khoản";
}

<h2>Danh sách tài khoản</h2>

<p>
    @Html.ActionLink("Tạo tài khoản mới", "Create")
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TenDangNhap)</th>
            <th>@Html.DisplayNameFor(model => model.GiangVien.TenGV)</th>
            <th>@Html.DisplayNameFor(model => model.VaiTro.TenVaiTro)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenDangNhap)</td>
                <td>@Html.DisplayFor(modelItem => item.GiangVien.TenGV)</td>
                <td>@Html.DisplayFor(modelItem => item.VaiTro.TenVaiTro)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.TenDangNhap }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.TenDangNhap }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.TenDangNhap })
                </td>
            </tr>
        }
    </tbody>
</table>
